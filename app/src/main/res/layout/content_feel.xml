<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_feel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.cloudskol.ifeel.FeelActivity"
    tools:showIn="@layout/activity_feel">

    <TextView android:id="@+id/lbl_ifeel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lbl_ifeel"
        android:textSize="30sp"/>

    <RadioGroup android:id="@+id/feelings_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:layout_below="@id/lbl_ifeel">

        <ToggleButton android:id="@+id/tgl_fear"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:textSize="14sp"
            android:drawableTop="@drawable/favorite"
            android:textOn="@string/lbl_fear"
            android:textOff="@string/lbl_fear"
            android:onClick="onToggle"
            android:checked="true" />
        <ToggleButton android:id="@+id/tgl_anger"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:textSize="14sp"
            android:drawableTop="@drawable/image"
            android:textOn="@string/lbl_anger"
            android:textOff="@string/lbl_anger"
            android:onClick="onToggle" />
        <ToggleButton android:id="@+id/tgl_sad"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textOn="@string/lbl_sad"
            android:textOff="@string/lbl_sad"
            android:onClick="onToggle" />
        <ToggleButton android:id="@+id/tgl_joy"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textOn="@string/lbl_joy"
            android:textOff="@string/lbl_joy"
            android:onClick="onToggle" />
        <ToggleButton android:id="@+id/tgl_disgust"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textOn="@string/lbl_disgust"
            android:textOff="@string/lbl_disgust"
            android:onClick="onToggle" />
        <ToggleButton android:id="@+id/tgl_surprise"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textOn="@string/lbl_surprise"
            android:textOff="@string/lbl_surprise"
            android:onClick="onToggle" />
    </RadioGroup>

    <TextView android:id="@+id/lbl_person"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lbl_person"
        android:layout_below="@id/feelings_group"
        android:textSize="24sp"
        android:layout_marginTop="25dp"/>
    <EditText android:id="@+id/txt_person"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lbl_person"
        android:hint="@string/txt_person_hint"
        android:maxLines="1"/>

    <TextView android:id="@+id/lbl_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lbl_summary"
        android:layout_below="@id/txt_person"
        android:textSize="24sp"
        android:layout_marginTop="25dp"/>
    <EditText android:id="@+id/txt_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lbl_summary"
        android:inputType="textMultiLine"
        android:lines="5"
        android:gravity="top"
        android:hint="@string/txt_note_hint"/>

    <Button android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_save"
        android:layout_below="@+id/txt_summary"
        android:layout_marginBottom="10dp"
        android:onClick="onSave"/>
    <Button android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_cancel"
        android:layout_below="@+id/txt_summary"
        android:layout_toRightOf="@id/btn_save"
        android:onClick="onCancel"/>
</RelativeLayout>
