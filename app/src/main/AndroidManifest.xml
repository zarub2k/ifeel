<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cloudskol.ifeel">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FeelActivity"
            android:label="@string/title_activity_feel"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.cloudskol.ifeel.MainActivity" />
        </activity>
        <activity
            android:name=".TrendActivity"
            android:label="@string/title_activity_trend"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.cloudskol.ifeel.MainActivity" />
        </activity>
        <activity
            android:name=".InfluencerActivity"
            android:label="@string/title_activity_influencer"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.cloudskol.ifeel.MainActivity" />
        </activity>

        <activity
            android:name=".trend.FeelingsTrendActivity"
            android:label="@string/title_activity_trend"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.cloudskol.ifeel.MainActivity" />
        </activity>
    </application>

</manifest>